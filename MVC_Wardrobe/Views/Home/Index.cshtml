@{
    ViewBag.Title = "Home Page";
}
<!--Prism image for in home page-->
<h1><img src="https://camo.githubusercontent.com/640098629303217333abca277a378304d3d129dc/687474703a2f2f68656c696f6e332e73332e616d617a6f6e6177732e636f6d2f707269736d2e6a7067" style="width:1400px;height:350px"/></h1>

<!--Inverted color navbar fixed to the top of the home screen-->
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
    <div class="container">
        <!-- Split button drop down containing tops action link -->
        <div class="btn-group">
            <button type="button" class="btn btn-danger">Tops</button>
            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">@Html.ActionLink("View","Index","Tops")</a></li>
            </ul>
        </div>
        <!-- Split button dropdown containing bottoms actionlink -->
        <div class="btn-group">
            <button type="button" class="btn btn-danger">Bottoms</button>
            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">@Html.ActionLink("View", "Index", "Bottoms")</a></li>
            </ul>
        </div>
        <!-- Split button dropdown containing shoes actionlink -->
        <div class="btn-group">
            <button type="button" class="btn btn-danger">Shoes</button>
            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">@Html.ActionLink("View", "Index", "Shoes")</a></li>
            </ul>
        </div>
        <!-- Split button dropdown containing accessories actionlink -->
        <div class="btn-group">
            <button type="button" class="btn btn-danger">Accessories</button>
            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">@Html.ActionLink("View", "Index", "Accessories")</a></li>
            </ul>
        </div>
    </div>
</nav>
<body>
    <!--Simple Collapsible that contains and about the company-->
    <div class="container">
        <h2>About Prism</h2>
        <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo">Simple collapsible</button>
        <div id="demo" class="collapse">
            Prism Clothing line creates the an authentic feel to your everyday life. We have retro and different
            color T-Shirts and outerware, many styles of jeans, fun comfortable athletic shoes and boots, and all
            the accessories to suit your style and comfort.         </div>
    </div> 
    <!--Carousel on the home page-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://i.ebayimg.com/images/i/320969441072-0-1/s-l1000.jpg" alt="Zepplin" style="width:350px;height:350px;">
            </div>

            <div class="item">
                <img src="http://cdn.bucklecontent.com/media/images/bw3/xl/8816531STC495_C95_xl_v1_m56577569836402591.jpg" alt="Jeans" style="width:350px;height:350px">
            </div>

            <div class="item">
                <img src="http://cdn.bucklecontent.com/media/images/bw3/lg/34175MOSS_TGB_lg_v1_m56577569836257022.jpg" alt="boots"style="width:350px;height:350px">
            </div>

            <div class="item">
                <img src="http://cdn.bucklecontent.com/media/images/bw3/xl/81420U0797G1_SGD_xl_v1_m56577569836472186.jpg" alt="watch"style="width:350px;height:350px">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>